<h2>New Post Form</h2>

<%= form_for :post, url: user_posts_path  do |f| %>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :content %><br>
			<%= f.text_area :content %>
		</p>
			<% @tags.each do |tag| %>
		    
 			<%=check_box_tag 'tag_ids[]', tag.id -%>
	    	<%= h tag.name%>

		  <% end %>
			
		<p>
			<%=f.submit%>
		</p>
<% end %>

<h2>New Tag</h2>
<%=form_for :tag, url: tags_path do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%=f.submit%>
	</p>
<% end %>

